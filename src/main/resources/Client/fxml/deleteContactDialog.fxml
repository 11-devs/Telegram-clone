<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox fx:id="dialogRoot" prefWidth="420.0" spacing="25.0" styleClass="dialog-root" stylesheets="@../css/deleteContactDialog.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
    </padding>
    <children>
        <!-- Header: Avatar and Title -->
        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <children>
                <StackPane alignment="CENTER">
                    <children>
                        <ImageView fx:id="avatarImageView" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true" styleClass="avatar-image">
                            <image>
                                <Image url="@../images/11Devs-white.png" />
                            </image>
                            <clip>
                                <Circle centerX="24.0" centerY="24.0" radius="24.0" />
                            </clip>
                        </ImageView>
                    </children>
                </StackPane>
                <Label styleClass="dialog-title" text="Delete contact" />
            </children>
        </HBox>

        <!-- Confirmation Message -->
        <Label fx:id="confirmationLabel" styleClass="content-label" text="Are you sure you want to delete First Name Last Name from your contact list?" wrapText="true" />

        <!-- Action Buttons -->
        <HBox alignment="BOTTOM_RIGHT" spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" styleClass="dialog-button, cancel-button" text="CANCEL" />
                <Button fx:id="deleteButton" defaultButton="true" mnemonicParsing="false" onAction="#handleDelete" styleClass="dialog-button, delete-button" text="DELETE" />
            </children>
        </HBox>
    </children>
</VBox>
