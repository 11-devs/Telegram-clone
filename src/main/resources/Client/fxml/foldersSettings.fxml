<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<VBox prefHeight="550.0" prefWidth="400.0" styleClass="settings-sub-section" stylesheets="@../css/settings.css, @../css/foldersSettings.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.Controllers.FoldersSettingsController">
    <children>
        <HBox alignment="CENTER_LEFT" styleClass="title-bar">
            <padding>
                <Insets bottom="12.0" left="20.0" right="20.0" top="12.0" />
            </padding>
            <children>
                <Button onAction="#handleBack" styleClass="icon-button">
                    <graphic>
                        <SVGPath content="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5" fill="#92A3AF" scaleX="1.5" scaleY="1.5" />
                    </graphic>
                </Button>
                <Label fx:id="sectionTitleLabel" styleClass="settings-title" text="Folders">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
            </children>
        </HBox>

        <VBox alignment="TOP_LEFT" spacing="15.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label styleClass="sub-section-header" text="Chat Folders" />
            <Label styleClass="sub-section-content" text="Organize your chats into custom folders for easy access." wrapText="true" />

            <Button styleClass="setting-action-button" text="Create New Folder" />
            <Button styleClass="setting-action-button" text="Edit Existing Folders" />
        </VBox>
    </children>
</VBox>