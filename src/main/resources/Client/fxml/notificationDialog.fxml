<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="311.0" prefWidth="318.0" stylesheets="@../css/notificationDialog.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.Controllers.NotificationDialogController" fx:id="rootVBox" styleClass="dialog-root">
    <children>
        <VBox fx:id="messageContainer" prefWidth="278.0" styleClass="message-text">
            <children>
                <Text fx:id="messageText" text="This is a notification message." wrappingWidth="278.0" style="-fx-fill: #FFFFFF;">
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" top="20.0" bottom="0.0" />
                    </VBox.margin>
                </Text>
            </children>
        </VBox>
        <HBox alignment="BOTTOM_RIGHT" prefWidth="318.0">
            <Button fx:id="okButton" alignment="CENTER" onAction="#handleOk" prefHeight="30.0" prefWidth="80.0" styleClass="ok-button" text="OK">
                <HBox.margin>
                    <Insets bottom="10.0" right="10.0" />
                </HBox.margin>
            </Button>
        </HBox>
    </children>
</VBox>