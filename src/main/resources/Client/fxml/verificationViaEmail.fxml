                              <Font name="System" size="14.0" />
                           </font>
                        </Label>
                        <HBox fx:id="codeFields" alignment="CENTER" prefHeight="50.0" prefWidth="365.0" spacing="10.0" styleClass="code-fields">
                           <children>
                              <TextField fx:id="code1" prefHeight="50.0" prefWidth="40.0" styleClass="code-field" />
                              <TextField fx:id="code2" prefHeight="50.0" prefWidth="40.0" styleClass="code-field" />
                              <TextField fx:id="code3" prefHeight="50.0" prefWidth="40.0" styleClass="code-field" />
                              <TextField fx:id="code4" prefHeight="50.0" prefWidth="40.0" styleClass="code-field" />
                              <TextField fx:id="code5" prefHeight="50.0" prefWidth="40.0" styleClass="code-field" />
