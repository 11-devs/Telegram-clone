                           <VBox.margin>
                              <Insets top="30.0" />
                           </VBox.margin>
                        </HBox>
                        <Label fx:id="validationMessageLabel" styleClass="info-label">
                           <VBox.margin>
                              <Insets top="15.0" />
                           </VBox.margin>
                        </Label>
                        <Label onMouseClicked="#handleNoEmailAccess" styleClass="sms-link" text="Don't have access to this email?">
