<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<VBox fx:id="dialogRoot" prefWidth="400.0" spacing="10.0" styleClass="dialog-root" stylesheets="@../css/createChannelDialog.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label styleClass="dialog-title" text="New Channel">
            <VBox.margin>
                <Insets bottom="10.0" left="25.0" right="25.0" top="20.0" />
            </VBox.margin>
        </Label>
        <HBox alignment="TOP_LEFT" spacing="20.0">
            <VBox.margin>
                <Insets left="25.0" right="25.0" />
            </VBox.margin>
            <children>
                <StackPane alignment="CENTER" styleClass="profile-picture-container">
                    <children>
                        <!-- Placeholder with SVG Icon -->
                        <StackPane alignment="CENTER" prefHeight="80.0" prefWidth="80.0" style="-fx-background-color: #33A1E0;" styleClass="profile-picture-placeholder">
                            <children>
                                <SVGPath content="M12 12c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm0-5c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3zM21 4h-3.17L16 2H8L6.17 4H3c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm-9 14c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5z" scaleX="2.0" scaleY="2.0" styleClass="change-photo-svg" translateX="1.0" />
                            </children>
                        </StackPane>
                    </children>
                </StackPane>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="channelNameLabel" styleClass="field-label-dialog" text="Channel name" />
                        <TextField fx:id="channelNameField" promptText="Enter channel name" styleClass="dialog-text-field" />
                    </children>
                    <padding>
                        <Insets top="15.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>
        <VBox spacing="5.0">
            <VBox.margin>
                <Insets left="25.0" right="25.0" />
            </VBox.margin>
            <children>
                <Label fx:id="descriptionLabel" styleClass="field-label-dialog" text="Description (optional)" />
                <TextArea fx:id="descriptionArea" prefRowCount="3" styleClass="dialog-text-area" wrapText="true" />
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Label fx:id="charCountLabel" styleClass="char-count-label" text="0/255" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
            <children>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" styleClass="dialog-button" text="CANCEL">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="createButton" mnemonicParsing="false" onAction="#handleCreate" styleClass="dialog-button" text="CREATE" />
            </children>
            <padding>
                <Insets bottom="20.0" left="25.0" right="25.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</VBox>
