<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="dialogRoot" prefWidth="320.0" styleClass="dialog-root" stylesheets="@../css/editUsernameDialog.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.Controllers.EditUsernameDialogController">
   <children>
      <Label styleClass="dialog-title" text="Username">
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <VBox spacing="5.0">
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
         <children>
            <Label fx:id="usernameLabel" styleClass="field-label-dialog" text="Username" />
            <HBox alignment="CENTER_LEFT" spacing="2.0">
               <children>
                  <Label styleClass="username-prefix" text="@" />
                  <TextField fx:id="usernameField" HBox.hgrow="ALWAYS" styleClass="dialog-text-field" />
               </children>
            </HBox>
            <Label fx:id="errorLabel" managed="false" styleClass="error-label" text="Error message here" visible="false">
               <VBox.margin>
                  <Insets top="4.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <Label styleClass="dialog-description" text="You can choose a username on this platform. If you do, people will be able to find you by this username and contact you without needing your phone number.">
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="15.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" styleClass="dialog-button" text="Cancel">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" styleClass="dialog-button" text="Save" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>