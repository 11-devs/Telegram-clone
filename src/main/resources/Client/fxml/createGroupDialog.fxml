<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<VBox fx:id="dialogRoot" prefWidth="400.0" spacing="20.0" styleClass="dialog-root" stylesheets="@../css/createGroupDialog.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.Controllers.CreateGroupDialogController">
    <padding>
        <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="dialog-title" text="New Group" />
        <HBox alignment="TOP_CENTER" spacing="15.0">
            <children>
                <StackPane fx:id="profilePicturePane" alignment="CENTER" styleClass="profile-picture-container">
                    <children>
                        <ImageView fx:id="profileImageView" fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true" styleClass="profile-picture-placeholder" />
                        <StackPane alignment="CENTER" prefHeight="64.0" prefWidth="64.0" styleClass="profile-picture-overlay">
                            <children>
                                <SVGPath content="M12 12c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm0-5c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3 3zM21 4h-3.17L16 2H8L6.17 4H3c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm-9 14c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5z" styleClass="profile-picture-svg" />
                            </children>
                        </StackPane>
                    </children>
                </StackPane>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="5.0" />
                    </padding>
                    <children>
                        <Label styleClass="field-label-dialog" text="Group name" />
                        <TextField fx:id="groupNameField" promptText="Enter group name" styleClass="dialog-text-field" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox alignment="BOTTOM_RIGHT">
            <children>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" styleClass="dialog-button" text="CANCEL">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="nextButton" defaultButton="true" mnemonicParsing="false" onAction="#handleNext" styleClass="dialog-button" text="NEXT" />
            </children>
        </HBox>
    </children>
</VBox>