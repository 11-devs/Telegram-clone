<BorderPane stylesheets="@../css/resetPassword.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.Controllers.ResetPasswordController">
    <center>
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0" prefWidth="790.0">
            <children>
                <VBox fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="420.0" prefWidth="320.0">
                    <children>
                        <VBox fx:id="infoBox" prefHeight="320.0" prefWidth="320.0">
                            <children>
                                <Label styleClass="title" text="Reset Password">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <Label styleClass="info-label" text="Please enter your new password.">
                                    <font>
                                        <Font name="System" size="14.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Label>
                                <Label fx:id="newPasswordLabel" styleClass="password-label" text="New Password">
                                    <font>
                                        <Font name="System" size="14.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="40.0" />
                                    </VBox.margin>
                                </Label>
                                <PasswordField fx:id="newPasswordField" prefHeight="40.0" prefWidth="320.0" styleClass="password-field">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </PasswordField>
                                <Label fx:id="confirmPasswordLabel" styleClass="password-label" text="Confirm Password">
                                    <font>
                                        <Font name="System" size="14.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="20.0" />
                                    </VBox.margin>
                                </Label>
                                <PasswordField fx:id="confirmPasswordField" prefHeight="40.0" prefWidth="320.0" styleClass="password-field">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </PasswordField>
                                <Label fx:id="statusLabel" styleClass="status-label">
                                    <VBox.margin>
                                        <Insets top="15.0" />
                                    </VBox.margin>
                                </Label>
                            </children>
                        </VBox>
                        <Button fx:id="submitButton" onAction="#handleSubmit" prefHeight="42.0" prefWidth="320.0" styleClass="submit-button" text="Reset Password">
                            <VBox.margin>
                                <Insets top="40.0" />
                            </VBox.margin>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
    <top>
        <HBox prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="40.0" prefWidth="404.0">
                    <children>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" prefHeight="16.0" prefWidth="27.0" styleClass="back-button">
                            <graphic>
                                <SVGPath content="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5" fill="#5b6772" scaleX="2.0" scaleY="2.0" scaleZ="2.0" styleClass="svg-path" />
