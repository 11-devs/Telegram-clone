                    <children>
                        <Button fx:id="settingsButton" alignment="CENTER" onAction="#handleSettings" prefHeight="30.0" prefWidth="92.0" styleClass="settings-button" text="SETTINGS">
                            <HBox.margin>
                                <Insets right="10.0" top="15.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>
    <bottom>
        <HBox prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </bottom>
</BorderPane>