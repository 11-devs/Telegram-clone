<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="dialogRoot" prefHeight="250.0" prefWidth="320.0" styleClass="dialog-root" stylesheets="@../css/editNameDialog.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.Controllers.EditNameDialogController">
   <children>
      <Label styleClass="dialog-title" text="Edit your name">
         <VBox.margin>
            <Insets bottom="30.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <VBox spacing="5.0">
         <children>
            <Label styleClass="field-label-dialog-active" text="First name" />
            <TextField fx:id="firstNameField" styleClass="dialog-text-field" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </VBox.margin>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label styleClass="field-label-dialog" text="Last name" />
            <TextField fx:id="lastNameField" styleClass="dialog-text-field" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" styleClass="dialog-button" text="Cancel">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" styleClass="dialog-button" text="Save" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </children>
</VBox>